<tr>
	<td><%= item_row.short_name -%></td>
	<td><%= item_row.full_name -%></td>
  
	<td class='actions'>
		<%= link_to(raw('<i class="icon-white icon-pencil"></i> Edit'), [:edit, :admin, item_row], :class => 'btn btn-primary btn-small') -%>
		<%= link_to(raw('<i class="icon-white icon-remove-sign"></i> Delete'), [:admin, item_row], :confirm => 'Are you sure you want to delete this Category?', :method => :delete, :class => 'btn btn-small btn-danger') -%>
	</td>
</tr>
