<tr>
	<td><%= item_row.title.truncate(20) -%></td>
	<td><%= item_row.link -%></td>
	<td><%= item_row.published_date.strftime("%b. %Y") rescue "unknown" -%></td>
	<td class='actions'>
		<%= link_to(raw('<i class="icon-white icon-pencil"></i> Edit'), [:edit, :admin, item_row], :class => 'btn btn-primary btn-small') -%>
		<%= link_to(raw('<i class="icon-white icon-remove-sign"></i> Delete'), [:admin, item_row], :confirm => 'Are you sure you want to delete this Admin User?', :method => :delete, :class => 'btn btn-small btn-danger') -%>
	</td>
</tr>